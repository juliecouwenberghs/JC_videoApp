      <div class="secF2" id="movF4">Serious</div>
      <div class="secF2" id="movF5">Sports</div>
    </div>
    <div class="tvFilter hidden">
      <p class="kidsIntro2">What Kind of Shows?</p>
      <div class="secF2" id="tvF1">Cartoon</div>
      <div class="secF2" id="tvF2">Educational</div>
      <div class="secF2" id="tvF3">Comedy</div>
      <div class="secF2" id="tvF4">History</div>
      <div class="secF2" id="tvF5">Sports</div>
    </div>
    <div class="musicFilter hidden">
      <p class="Intro2">What Kind of Music?</p>
      <div class="secF2" id="musF1">Pop</div>
      <div class="secF2" id="musF2">Country</div>
      <div class="secF2" id="musF3">Dance</div>
      <div class="secF2" id="musF4">Rock</div>
      <div class="secF2" id="musF5">Disney</div>
    </div>
  </section>
</div>
<footer>
  <h1 id="footerlogo">{{ title }}</h1>
