    <h2 class="hidden">Filter</h2>
    <div class="filterOption2" id="filter1"><p>Movies</p></div>
    <div class="filterOption2" id="filter2"><p>Tv</p></div>
    <div class="filterOption2" id="filter3"><p>Music</p></div>
    <div class="filterOption2" id="filter4"><p>Favourites</p></div>
  </section>
  <section id="secondaryFilters">
    <h2 class="hidden"> Secondary Filter</h2>
    <div class="movieFilter hidden">
      <p class="Intro2">What Kind of Movies?</p>
